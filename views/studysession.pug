extends layout


block content
    .overallcont
          #createsscont
           form(method = 'POST' action = '/study')
             button.btn.fakebtn(type='submit') Host Study Session  
          #ssquiz 
            img(src='/svg/tick.svg' style='margin-left: 5px; margin-bottom: 8px;')
            span#sstext Study Sessions
          each course, index in data
            .title #{index}  
            each studysession, index1 in course
                button.sscont #{studysession["topic"]}
                form(method='POST', action='/joinstudysession')
                  .contentforss Hosted by : #{studysession["hostedby"]}
                  .contentforss Location : #{studysession["location"]}
                  .contentforss Time : #{studysession["time"]}
                  .contentforss Vacancies Left : #{studysession["vacancies"]}
                  input(type="hidden" name="coursecode" value = index) 
                  input(type="hidden" name="studysession" value = index1)
                  input(type="hidden" name="username" value = username)
                  button(type='submit') Join this Study Session

        


    link(rel='stylesheet', href='/stylesheets/studysession.css')


    script.
        var quizzes = document.getElementsByClassName('sscont');
        var i;

        for (i = 0; i < quizzes.length; i++) {
            quizzes[i].addEventListener('click', function() {
                this.classList.toggle('active');
                var content = this.nextElementSibling;
                if (content.style.display === 'block') {
                    content.style.display = 'none';
                } else {
                    content.style.display = 'block';
                }
