extends layout

block content
  .thread-title(align='center')
    h1 #{title}

  .container-fluid#threads
    each post in data
      .row
        .username
          h3 #{post.username}
        .content
          h5 #{post.content}
        .buttons
          .container(align='center')
            form.float-left#quote_form(method = 'POST' action = '/replypost')
              button(type="submit" name="returnarrow" value="1")
                img#quote(src='/images/return_arrow.png' alt="ReplyButton")
            form.float-left#report_form(method = 'POST' action = '/reportpost')
              button(type="submit" name="reportarrow" value="2")
                img#report(src='/images/exclamation_mark.png' alt="ReportButton")
            form.float-left#up_form(method = 'POST' action = '/votepost')
              button(type="submit" name="votebutton" value="3")
                img#up(src='/images/thumbs_up.png' alt="VoteButton")
            form.float-left#down_form(method = 'POST' action = '/votepost')
              button(type="submit" name="votebutton" value="4")
                img#down(src='/images/thumbs_down.png' alt="DownvoteButton")      

  br
  .container-fluid#thread_buttons
    .row
      .col-lg-1
        button.btn.btn-primary(type='submit' align='left') Add Reply
      .col-lg-1
        button.btn.btn-primary(type='submit' align='left') Watch this Thread
      .col-lg-10
    .row
      .col-lg-12
        br
        br
        br
    .row
      .col-lg-6
        form(method='GET' action='/main')
          button.btn.btn-primary(type='submit') Return to Main Page
      .col-lg-6
  
  script.


  link(rel='stylesheet', href='/stylesheets/thread.css')
